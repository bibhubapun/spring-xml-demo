<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="actor1" class="com.stackroute.Actor">
        <constructor-arg name="name" value="Ramesh" type="java.lang.String"></constructor-arg>
        <constructor-arg name="gender" value="male" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="30" type="int"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.Actor">
        <constructor-arg name="name" value="Sureshi" type="java.lang.String"></constructor-arg>
        <constructor-arg name="gender" value="female" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="31" type="int"></constructor-arg>
    </bean>
    <bean id="actor3" class="com.stackroute.Actor">
        <constructor-arg name="name" value="Dinesh" type="java.lang.String"></constructor-arg>
        <constructor-arg name="gender" value="male" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="32" type="int"></constructor-arg>
    </bean>
    <bean name="movieA, movieB" class="com.stackroute.Movie">
     <constructor-arg name="actor" type="com.stackroute.Actor">
         <ref bean="actor1"/>
     </constructor-arg>
    </bean>
</beans>